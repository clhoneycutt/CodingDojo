@model Dish
<h3 class="text-center">Welcome to CRUDelicious</h3>
<div class="row pt-5">
    <div class="offset-2 col-6">
        <p>Check out some recent dishes!</p>
        <hr>
        @foreach(var dish in ViewBag.allDishes)
        {
            <p><a href="@dish.DishID/show">@dish.Name</a> by @dish.Chef</p>
        }
    </div>
    <div class="col-2 text-center">
        <a href="new">Add a dish</a>
    </div>
</div>