@model Dish
<div class="text-center">
    <h2 class="display-4">Add a Dish!</h2>
</div>
<a href="/dishes/">Home</a>

<form asp-action="create" asp-controller="Dish" method="POST">
    <div class="row">
        <div class="col-4 mr-5">
            <div class="form-group">
                <label asp-for="Name">Name of Dish:</label>
                <span asp-validation-for="Name"></span>
                <input type="text" asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Calories"># of Calories:</label>
                <span asp-validation-for="Calories"></span>
                <input type="text" asp-for="Calories" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <span asp-validation-for="Description"></span>
                <textarea asp-for="Description" class="form-control" cols="30" rows="10"></textarea>
            </div>
        </div>
        <div class="col-3 ml-5">
            <div class="form-group">
                <label asp-for="ChefID">Chef:</label>
                <select asp-for="ChefID" class="form-control">
                    @foreach(var chef in ViewBag.AllChefs)
                    {
                        <option value="@chef.ChefID">@chef.FirstName @chef.LastName</option>
                    }
                </select>
                <div class="text-right">
                    <button type="submit" class="btn btn-outline-dark">Add Dish</button>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label asp-for="Tastiness">Tastiness:</label>
                <select asp-for="Tastiness" class="form-control">
                    @for(int i=1;i<=5;i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>
        </div>
    </div>
</form>
