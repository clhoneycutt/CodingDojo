@model List<Chef>
<div class="row">
    <div class="offset-4 col-4">
        <h3 class="display-4">Chefs | <a href="/dishes/">Dishes</a></h3>
    </div>
    <div class="col-4 text-right">
        <a href="new">Add a Chef</a>
    </div>
</div>
<hr>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th># of Dishes</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Chef chef in @Model)
        {
            <tr>
                <td>@chef.FirstName @chef.LastName</td>
                <td>@chef.Age</td>
                <td>@chef.Dishes.Count</td>
            </tr>
        }
    </tbody>
</table>