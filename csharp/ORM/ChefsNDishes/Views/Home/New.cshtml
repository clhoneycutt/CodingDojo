@model Chef
<div class="text-center">
    <h2 class="display-4">Add a Chef!</h2>
</div>
<a href="/">Home</a>

<form asp-action="create" asp-controller="Home" method="POST">
    <div class="row">
        <div class="offset-3 col-3 mr-5">
            <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <span asp-validation-for="FirstName"></span>
                <input type="text" asp-for="FirstName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <span asp-validation-for="LastName"></span>
                <input type="text" asp-for="LastName" class="form-control">
            </div>
        </div>
        <div class="col-3 ml-5">
            <div class="form-group">
                <label asp-for="DateOfBirth">Date Of Birth:</label>
                <input type="date" asp-for="DateOfBirth" class="form-control">
            </div>
            <div class="text-right mt-5">
                <button type="submit" class="btn btn-outline-dark">Add Chef</button>
            </div>
        </div>
    </div>
</form>
