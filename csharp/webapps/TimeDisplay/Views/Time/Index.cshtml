<body>

    @{
        DateTime time = DateTime.Now;
    }

    <div class="container">
        <h4 class="display-3 text-center">The current Date and Time</h4>
        <div class="timeDisplay col-12 col-md-6 offset-md-3 mt-5">
            <h4 class="display-4 text-center">@time</h4>
        </div>
    </div>


</body>
</html>